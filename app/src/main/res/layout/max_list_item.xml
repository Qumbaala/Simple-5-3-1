<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="72dp"
    app:cardElevation="2dp"
    android:layout_margin="2dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="72dp"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/txt_date_max"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/txt_squat_max_list_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/txt_date_max"
            android:layout_marginRight="5dp"
            android:gravity="center"
             />

        <TextView
            android:id="@+id/txt_bench_max_list_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/txt_squat_max_list_item"
            android:layout_toLeftOf="@+id/btn_delete_max_list_item"
            android:layout_alignBaseline="@+id/txt_squat_max_list_item"
            android:gravity="center"


           />

        <TextView
            android:id="@+id/txt_deadlift_max_list_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:layout_alignLeft="@+id/txt_squat_max_list_item"
            android:layout_below="@+id/txt_squat_max_list_item"
            android:layout_toRightOf="@+id/txt_date_max"
            android:layout_alignParentBottom="true"

            />

        <TextView
            android:id="@+id/txt_press_max_list_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_below="@+id/txt_bench_max_list_item"
            android:layout_alignLeft="@+id/txt_bench_max_list_item"
            android:layout_toLeftOf="@+id/btn_delete_max_list_item"
            android:layout_alignParentBottom="true"

           />


        <ImageButton
            android:id="@+id/btn_delete_max_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/img_btn_padding"
            android:background="@android:color/transparent"
            android:src="@drawable/selector_delete_btn"
            android:layout_gravity="center"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>